{
  "manifest_version": 3,
  "name": "Facebook Comment Tool",
  "version": "1.0.0",
  "description": "Ferramenta para coment√°rios automatizados no Facebook",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "windows"  
  ],
  "host_permissions": [
    "https://*.facebook.com/*",
    "https://facebook.com/*",
    "http://*.facebook.com/*",  
    "http://facebook.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.facebook.com/*", "http://*.facebook.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Facebook Comment Tool"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}